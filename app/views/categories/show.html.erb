<div class="flex flex-col items-center my-6 mx-4">
  <h1 class="text-3xl font-medium mb-6 text-gray-500"><%= @category.name %></h1>
  <% if @total == 0 %>
  <p class="text-gray-600">No trades found</p>
  <img src="https://cdn-icons-png.flaticon.com/512/8541/8541407.png" alt="No trades found" class="w-32 h-32 my-10">
<% else %>
  <p class="text-xl font-medium mb-6 bg-gradient-to-tr from-green-700 via-green-500 to-green-300 rounded-md p-2">$<%= @total %></p>
    <div class="flex flex-col gap-6">
      <% @trades.each do |trade| %>
      <div class="flex items-center p-6 rounded-lg bg-white shadow-lg w-ful border gap-4">
        <%= image_tag(@category.icon, alt: "Icon pic", class: "w-12 h-12") %>
        <div class="flex flex-col">
          <div class="flex justify-between text-gray-600 font-bold gap-4">
            <p class="text-sm font-medium mb-3"><%= trade.name %></p>
            <p class="font-medium">$<%= trade.amount %></p>
          </div>
          <hr class="my-1">
          <div class="text-gray-600 text-start">
            <%= trade.created_at.strftime("%B %d, %Y") %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
<% end %>
  <%= link_to "Add new trade", new_category_trade_path(@category), class: "bg-blue-400 text-white py-2 px-12 text-lg rounded-lg mt-6 absolute bottom-10" %>
  <%= link_to "Back", categories_path, class: "text-blue-500 py-2 px-4 rounded-lg absolute bottom-2" %>
</div>